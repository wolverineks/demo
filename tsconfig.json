{
  "include": ["./src/*", "./types"],
  "compilerOptions": {
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "strictNullChecks": true,
    "lib": ["dom", "es2019"],
    "jsx": "react",
    "target": "es5",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true
  }
}
